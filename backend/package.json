{
  "name": "tanggapin-backend",
  "version": "1.0.0",
  "description": "Backend API for Tanggapin - Instagram Auto Reply System",
  "main": "src/server.js",
  "type": "commonjs",
  "author": "Tanggapin Team",
  "license": "MIT",
  "keywords": ["instagram", "auto-reply", "api", "express", "webhook", "automation"],
  "scripts": {
    "start": "node src/server.js",
    "start:production": "NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js --ignore logs/ --ignore uploads/",
    "dev:safe": "node --watch src/server.js",
    "dev:manual": "node src/server.js",
    "dev:force": "npx kill-port 3000 && nodemon src/server.js",
    "dev:debug": "nodemon --inspect src/server.js",
    "dev:verbose": "DEBUG=* nodemon src/server.js",
    "kill-port": "npx kill-port 3000",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "node scripts/reset-database.js",
    "db:backup": "node scripts/backup-database.js",
    "admin:create": "node create-admin.js",
    "logs:clear": "rm -rf logs/*.log",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "node scripts/health-check.js",
    "webhook:test": "node scripts/test-webhook.js",
    "ngrok": "ngrok http 3000",
    "ngrok:subdomain": "ngrok http 3000 --subdomain=tanggapin-dev",
    "clean": "rm -rf node_modules logs/*.log uploads/temp/*",
    "clean:install": "npm run clean && npm install",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop tanggapin-backend",
    "pm2:restart": "pm2 restart tanggapin-backend",
    "pm2:logs": "pm2 logs tanggapin-backend",
    "pm2:monitor": "pm2 monit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "node-cron": "^3.0.3",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3",
    "kill-port": "^2.0.1",
    "ngrok": "^5.0.0-beta.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanggapin/tanggapin-backend.git"
  },
  "bugs": {
    "url": "https://github.com/tanggapin/tanggapin-backend/issues"
  },
  "homepage": "https://github.com/tanggapin/tanggapin-backend#readme",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
